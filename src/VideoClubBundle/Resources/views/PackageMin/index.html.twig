{% extends 'layout.html.twig' %}

{% block body %}

<h1>Elegí el paquete que más te conviene</h1>

<div class="panel panel-default">
  <div class="panel-body">
	<div class="row">
	
	{% for pack in packs %}
	  <div class="col-md-4">
	    <div class="thumbnail">
	      <img src="{{ asset('public/img/pack1.jpg') }}" alt="...">
	      <div class="caption">
	        <h3>{{ pack.packname }}</h3>
	        <p>Minutos incluidos: {{ pack.minutes }}</p>
	        <p>Costo: $ {{ pack.cost }}</p>
	        <a href="{{ path('pack_buy', { 'id': pack.id }) }}" class="btn btn-primary">Comprar</a>
	      </div>
	    </div>
	  </div>
	{% endfor %}
	</div>
  </div>
</div>

{% endblock %}