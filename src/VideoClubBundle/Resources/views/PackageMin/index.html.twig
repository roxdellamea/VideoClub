{% extends 'layout.html.twig' %}

{% block body %}

<h1>Compra tu paquete de minutos</h1>



<div class="panel panel-default">
  <div class="panel-body">
	<div class="row">
	
	{% for pack in packs %}
	  
	  <div class="col-md-4">
	    <div class="thumbnail">
	      <img src="{{ asset('public/img/pack1.jpg') }}" alt="...">
	      <div class="caption">
	        <h3>{{ pack.packname }}</h3>
	        <p>Minutos incluidos: {{ pack.minutes }}</p>
	        <p>Costo: $ {{ pack.cost }}</p>
	        <p><a href="#" class="btn btn-primary" role="button">Comprar</a></p>
	      </div>
	    </div>
	  </div>

	{% endfor %}

	</div>

	

  </div>
</div>

{% endblock %}