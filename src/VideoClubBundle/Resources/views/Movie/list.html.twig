{% extends 'layout.html.twig' %}

{% block body %}

<h1> </h1>



<div class="panel panel-default">
  <div class="panel-body">

  	<div class="row">
	{% for movie in movies %}
	  <div class="col-md-3">
	    <div class="thumbnail">
	      <img src="{{ asset('public/img/' ~ movie.image ~ '.jpg') }}" alt="..." style="width:220px; height:320px">
	      <div class="caption">
	        <h3>{{ movie.title }}</h3>
	        <p>{{ movie.year }}</p>
	        <p>{{ movie.synopsis }}</p>
	        <p><a href="{{ path('movie_show', { 'id': movie.id }) }}" class="btn btn-primary" role="button">Ver Pelicula</a></p>
	      </div>
	    </div>
	  </div>
	{% endfor %}
	</div>

	

  </div>
</div>

{% endblock %}